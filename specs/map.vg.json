{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "rgb(255,255,255)",
  "padding": 10,
  "config": {
    "locale": {
      "number": {
        "currency": [
          "£",
          ""
        ]
      }
    },
    "title": {
      "font": "Avenir Next Condensed",
      "fontSize": 28,
      "fontWeight": 500,
      "subtitleFont": "Avenir Next Condensed",
      "subtitleFontSize": 14,
      "subtitleFontWeight": 400,
      "anchor": "start"
    },
    "legend": {
      "titleFont": "Avenir Next Condensed",
      "titleFontSize": 11,
      "titleFontWeight": 400,
      "labelFont": "Avenir Next Condensed",
      "labelFontSize": 10,
      "labelFontWeight": 100
    },
    "text": {
      "font": "Avenir Next Condensed",
      "fontSize": 9,
      "fontWeight": 300
    }
  },
  "signals": [
    {
      "name": "map_width",
      "value": 400
    },
    {
      "name": "map_height",
      "value": 500
    }
  ],
  "data": [
    {
      "name": "boundaries",
      "format": {
        "type": "topojson",
        "feature": "district_borough_unitary"
      },
      "url": "data/district_borough_unitary.json",
      "transform": [
        {
          "type": "geojson",
          "signal": "boundaries"
        }
      ]
    },
    {
      "name": "prices",
      "format": {
        "type": "csv",
        "parse": {
          "price": "number"
        }
      },
      "url": "data/aggregated-pp-2019.csv",
      "transform": [
        {
          "type": "lookup",
          "from": "boundaries",
          "key": "properties.census_code",
          "fields": [
            "admin_district_code"
          ],
          "as": [
            "boundary"
          ]
        }
      ]
    },
    {
      "name": "column_domain",
      "source": "prices",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "property_type"
          ]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "identity",
      "translate": [
        0,
        {
          "signal": "map_height"
        }
      ],
      "fit": {
        "signal": "boundaries"
      },
      "size": [
        {
          "signal": "map_width"
        },
        {
          "signal": "map_height"
        }
      ],
      "reflectY": true
    }
  ],
  "layout": {
    "columns": 1,
    "padding": {
      "row": 20
    }
  },
  "marks": [
    {
      "type": "group",
      "title": {
        "text": "Property Prices",
        "subtitle": "Median price paid for properties of each type in each region, 2019"
      }
    },
    {
      "type": "group",
      "layout": {},
      "marks": [
        {
          "type": "group",
          "role": "column-header",
          "from": {
            "data": "column_domain"
          },
          "sort": {
            "field": "datum.property_type",
            "order": "ascending"
          },
          "title": {
            "text": {
              "signal": "parent.property_type"
            },
            "fontSize": 20,
            "fontWeight": 400
          }
        },
        {
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_prices",
              "data": "prices",
              "groupby": "property_type"
            }
          },
          "sort": {
            "field": "datum.property_type",
            "order": "ascending"
          },
          "scales": [
            {
              "name": "colour",
              "type": "quantile",
              "domain": {
                "data": "faceted_prices",
                "field": "price"
              },
              "range": {
                "scheme": "reds",
                "count": 4
              }
            }
          ],
          "legends": [
            {
              "title": "Quartiles",
              "orient": "none",
              "format": "$~s",
              "type": "symbol",
              "fill": "colour"
            }
          ],
          "encode": {
            "enter": {
              "width": {
                "signal": "map_width"
              },
              "height": {
                "signal": "map_height"
              }
            }
          },
          "marks": [
            {
              "type": "shape",
              "from": {
                "data": "faceted_prices"
              },
              "encode": {
                "enter": {
                  "stroke": {
                    "value": "white"
                  },
                  "tooltip": {
                    "signal": "{'Property Type': datum.property_type, 'Region': datum.boundary.properties.name, 'Median Price': format(datum.price, '$~s')}"
                  }
                },
                "update": {
                  "fill": [
                    {
                      "test": "isValid(datum.price)",
                      "field": "price",
                      "scale": "colour"
                    },
                    {
                      "value": "rgb(192,192,192)"
                    }
                  ],
                  "strokeWidth": {
                    "value": 0.25
                  },
                  "zindex": {
                    "value": 0
                  }
                },
                "hover": {
                  "strokeWidth": {
                    "value": 2
                  },
                  "zindex": {
                    "value": 1
                  }
                }
              },
              "transform": [
                {
                  "type": "geoshape",
                  "projection": "projection",
                  "field": "datum.boundary"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "marks": [
        {
          "type": "text",
          "encode": {
            "enter": {
              "text": {
                "value": [
                  "Contains OS data © Crown copyright and database right 2020",
                  "Contains Royal Mail data © Royal Mail copyright and database right 2020",
                  "Contains National Statistics data © Crown copyright and database right 2020",
                  "Contains HM Land Registry data © Crown copyright and database right 2020"
                ]
              }
            }
          }
        }
      ]
    }
  ]
}
